{
  "compilerOptions": {
    /* Base Options: */
    "skipLibCheck": true,
    "target": "ESNext",
    // "esModuleInterop": true,
    // "allowJs": true,
    // "resolveJsonModule": true,
    // "moduleDetection": "force",
    // "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    // "sourceMap": true,
    "verbatimModuleSyntax": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vitest/globals",
      "node"
    ],

    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
  },
}


